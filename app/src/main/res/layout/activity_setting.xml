<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:test="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#8866ff00"
        android:gravity="center_horizontal"
        android:paddingBottom="5dp"
        android:paddingTop="5dp"
        android:text="设置中心"
        android:textSize="22sp"

        />

    <site.wanter.ui.SettingView
        android:id="@+id/sv_setting_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        test:title="提示更新"
        test:des_on="打开提示更新"
        test:des_off="关闭提示更新"
        >
    </site.wanter.ui.SettingView>
    <site.wanter.ui.SettingView
        android:id="@+id/sv_setting_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        test:title="显示号码归属地"
        test:des_on="显示号码归属地"
        test:des_off="不显示号码归属地"
        >
    </site.wanter.ui.SettingView>

    <site.wanter.ui.SettingClickView
        android:id="@+id/scv_setting_changebg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </site.wanter.ui.SettingClickView>
    <site.wanter.ui.SettingClickView
        android:id="@+id/scv_setting_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </site.wanter.ui.SettingClickView>
    <site.wanter.ui.SettingView
        android:id="@+id/sv_setting_blacknum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        test:title="黑名单"
        test:des_on="打开黑名单拦截"
        test:des_off="关闭黑名单拦截"
        >
    </site.wanter.ui.SettingView>

</LinearLayout>